@model AircraftStore.Mvc.ViewModels.ShoppingCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}
<script src="/Scripts/jquery-1.10.2.min.js"
        type="text/javascript"></script>
<script type="text/javascript">
    $(function() {
        // Document.ready -> link up remove event handler
        $(".RemoveLink").click(function() {
            // Get the id from the link
            var recordToDelete = $(this).attr("data-id");
            if (recordToDelete != '') {
                // Perform the ajax post
                $.post("/ShoppingCart/RemoveFromCart", { "id": recordToDelete },
                    function(data) {
                        // Successful requests get here
                        // Update the page elements
                        if (data.ItemCount == 0) {
                            $('#row-' + data.DeleteId).fadeOut('slow');
                        } else {
                            $('#item-count-' + data.DeleteId).text(data.ItemCount);
                        }
                        $('#cart-total').text(data.CartTotal);
                        $('#update-message').text(data.Message);
                        $('#cart-status').text('Cart (' + data.CartCount + ')');
                    });
            }
        });
    });
</script>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Review your cart
                <small>@Model.CartItems.Count item(s)</small>
            </h1>           
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <tr>
                    <th>
                        Aircraft Name
                    </th>
                    <th>
                        Price (each)
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
                @foreach (var item in Model.CartItems)
                {
                    <tr id="row-@item.RecordId">
                        <td>
                            @Html.ActionLink(item.Aircraft.Name, "Details", "Store", new {id = item.AircraftId}, null)
                        </td>
                        <td>
                            $ @item.Aircraft.Price million
                        </td>
                        <td id="item-count-@item.RecordId">
                            @item.Count
                        </td>
                        <td>
                            <a href="#" class="RemoveLink"
                               data-id="@item.RecordId">
                                Remove
                                from cart
                            </a>
                        </td>
                    </tr>
                }
                <tr>
                    <td>
                        Total
                    </td>
                    <td></td>
                    <td></td>
                    <td id="cart-total">
                        $ @Model.CartTotal million
                    </td>
                </tr>
            </table>
            <a href="@Url.Action("AddressAndPayment", "Checkout")" class="btn btn-primary">Checkout>> <i class="fa fa-angle-right"></i></a>
        </div>
    </div>        
    
</div>