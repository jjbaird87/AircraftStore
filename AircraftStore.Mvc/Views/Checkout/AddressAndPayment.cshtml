@model AircraftStore.Dal.Models.Order

@{
    ViewBag.Title = "AddressAndPayment";
}

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Address and Payment                    
                </h1>
            </div>
        </div>

        <fieldset>
            <legend>Shipping Information</legend>

            @Html.EditorForModel()
            <br/>
        </fieldset>
        <fieldset>
            
            <legend>Payment</legend>
            <p>We're running a promotion: all aircraft are free with the promo code: "FREE"</p>
            <div class="editor-label">
                @Html.Label("Promo Code")
            </div>
            <div class="editor-field">
                @Html.TextBox("PromoCode")
            </div>
        </fieldset>
        <br/>
        <input type="submit" value="Submit Order" class="btn btn-primary"/>
    </div>
    
}